<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily" >@font/poppins_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="inputMaterial" parent="Widget.AppCompat.EditText">
        <item name="android:padding">15dp</item>
        <item name="android:background">@color/dirty_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily" >@font/poppins_medium</item>
    </style>

    <style name="description_light" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#eb5e5e5e</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily" >@font/poppins_regular</item>
    </style>



</resources>
